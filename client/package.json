{
  "name": "client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "ZENOPT_ENV=Z_CI concurrently \"npm run start:server:dev\" \"npm run start:client:dev\"",
    "build": "npm install && npm run build:client && npm run build:server && NODE_ENV=production",
    "start": "node dist/server/bootstrap.js",
    "test": "jest --runInBand",
    "test:dev": "--watchAll",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:server": "tsc --project src/server --noEmit false",
    "start:client:dev": "cross-env NODE_ENV=development webpack-dev-server --hot --config webpack.config.js --open",
    "start:server:dev": "ts-node-dev  --respawn --transpileOnly src/server/bootstrap.ts",
    "test:build": "http-server ./build -o",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.2",
    "@types/redux": "^3.6.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.0",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "cross-env": "^6.0.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.17",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4"
  }
}
